{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"importHelpers": true,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"useUnknownInCatchVariables": false,
		"target": "ES2024",
		"sourceMap": false,
		"allowJs": false,
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"stripInternal": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
